<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.Quizak</item>
    </style>

    <style name="QuizakTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Quizak.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.Quizak" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/black</item>
    </style>

    <style name="ActionBar.Solid.Quizak.Inside" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/login_background</item>
    </style>

    <style name="ActionBar.Solid.Quizak.NoTitle" parent="@style/ActionBar.Solid.Quizak">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Style for forecast listview -->
    <style name="QuizakStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>